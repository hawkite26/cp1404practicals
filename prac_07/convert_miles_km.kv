BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_number
            text: '1'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text:"Down"
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: "Convert m to km"
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (255/255, 192/255, 203/255, 1)
